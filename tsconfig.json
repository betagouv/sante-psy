{
  "compilerOptions": {
      "lib": ["esnext"],
      "outDir": "./dist",
      "target": "esnext",
      "allowJs": true,
      "module": "commonjs",
      "noUnusedLocals": true,
      "sourceMap": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "esModuleInterop": true,      
      "typeRoots": [
        "@types",
        "./node_modules/@types",
      ],
  },
  "include": [
      "**/*.ts",
      "**/*.js"
  ],
  "exclude": [
      "node_modules",
      "**/*.d.ts",
      "dist"
  ]
}