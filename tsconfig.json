{
  "compilerOptions": {
      "outDir": "./dist",
      "target": "es6",
      "allowJs": true,
      "module": "commonjs",
      "noUnusedLocals": true,
      "sourceMap": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "esModuleInterop": true
  },
  "include": [
      "**/*.ts",
      "**/*.js"
  ],
  "exclude": [
      "node_modules",
      "**/*.d.ts",
      "dist"
  ]
}