<!DOCTYPE html>
<html lang="fr" data-rf-reset>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>
    <% if (locals.pageTitle) { %>
      <%= pageTitle %> | <%= appName %>
    <% } else { %>
      <%= appName %>
    <% } %>
  </title>
  <link rel="stylesheet" type="text/css" href="/static/gouvfr/css/dsfr.min.css">
  <link rel="stylesheet" href="/static/css/custom.css">
  <link rel="icon" type="image/png" sizes="32x32" href="/static/images/favicon/favicon-32x32.png">
  <!-- Matomo -->
  <script src="/static/js/matomo.js"></script>
  <!-- End Matomo Code -->
</head>
<body>
  <div class="rf-skiplinks">
    <div class="rf-container">
      <ul class="rf-skiplinks__list">
        <li>
          <a class="rf-link" href="#contenu">Accéder au contenu</a>
        </li>
        <li>
          <a class="rf-link" href="#header-navigation">Accéder au menu</a>
        </li>
        <li>
          <a class="rf-link" href="#footer">Accéder au footer</a>
        </li>
      </ul>
    </div>
  </div>

  <header role="banner" class="rf-header">
    <div class="rf-header__body">
      <div class="rf-container">
          <div class="rf-header__body-row">
              <div class="rf-header__brand rf-enlarge-link">
                <div class="rf-header__brand-top">
                    <div class="rf-header__logo">
                        <p class="rf-logo">
                            Ministère
                            <br>de l'Enseignement
                            <br>Supérieur,
                            <br>de la Recherche
                            <br>et de l'Innovation
                            <!-- todo link to home ? -->
                        </p>
                    </div>
                    <div class="rf-header__navbar">
                        <button class="rf-btn--menu rf-btn" data-rf-opened="false" aria-controls="modal-833" aria-haspopup="menu" title="Menu">
                            Menu
                        </button>
                    </div>
                </div>
                <div class="rf-header__service">
                  <a href="<%= locals.isInPsychologistPages ? '/psychologue/mes-seances' : '/' %>"
                    title="Retour à l’accueil">
                      <p class="rf-header__service-title">
                        <%= appName %>
                        <% if (locals.isInPsychologistPages) { %>
                          - Espace Psychologues
                        <% } %>
                      </p>
                      </a>
                      <p class="rf-header__service-tagline"><%= appDescription %></p>
                </div>
              </div>
              <% if (locals.featureReimbursementPage && locals.isInPsychologistPages) { %>
                <div class="rf-header__tools">
                    <div class="rf-header__tools-links">
                        <ul class="rf-links-group">
                            <li>
                              <a class="rf-link" href="/psychologue/logout" target="_self">Déconnexion</a>
                            </li>
                        </ul>
                    </div>
                </div>
              <% } %>
          </div>
      </div>
    </div>
 </header>



 <% if (locals.featureReimbursementPage && locals.isInPsychologistPages) { %>
  <header class="rf-header">
      <div class="rf-container">
        <nav  id="header-navigation" class="rf-nav" role="navigation" aria-label="Menu principal">
          <ul class="rf-nav__list">
            <li class="rf-nav__item <% if (page === '/psychologue/mes-seances') { %> rf-nav__item--active <% } %>">
              <a class="rf-nav__link" href="/psychologue/mes-seances" target="_self">Déclarer mes séances</a>
            </li>
            <li class="rf-nav__item <% if (page === '/psychologue/mes-remboursements') { %> rf-nav__item--active <% } %>">
              <a class="rf-nav__link" href="/psychologue/mes-remboursements" target="_self">Remboursement de mes séances</a>
            </li>
          </ul>
        </nav>
      </div>
    </header>
<% } %>