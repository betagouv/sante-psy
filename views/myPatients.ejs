<div class="rf-col-xs-12 rf-col-sm-12 rf-col-md-12 rf-col-lg-6 rf-col-xl-6 rf-pb-5w">
  <h2 class="rf-mb-4w">
    Mes patients
  </h2>
  <div class="rf-mb-2w">
    <a href="/psychologue/nouveau-patient" class="rf-btn rf-fi-add-line rf-btn--icon-left">Nouveau patient</a>
  </div>
  <div>
    <% if (patients.length) { %>
      <ul class="rf-list">
        <% patients.forEach(function(patient) { %>
          <div class="rf-grid-row rf-grid-row--gutters rf-grid-row--space-between">
            <div class="rf-col-xs-12 rf-col-sm-6 rf-col-md-6 rf-col-lg-6 rf-col-xl-6">
              <li><%= patient.lastName %> <%= patient.firstNames %></li>
            </div>
            <div class="rf-col-xs-12 rf-col-sm-6 rf-col-md-6 rf-col-lg-6 rf-col-xl-6 rf-text-right">
              <form action="/psychologue/modifier-patient" method="GET">
                <input hidden name="patientid" value="<%= patient.id %>" />
                <button type="submit" class="rf-btn rf-btn--secondary rf-btn--sm rf-fi-edit-line rf-btn--icon-left">
                  Modifier
                </button>
              </form>
            </div>
          </div>
        <% }) %>
      </ul>
    <% } else { %>
      Vous n'avez pas encore déclaré de patients.
    <% } %>
  </div>
</div>
