<% patients.forEach(function(patient) { %>
  <tr>
    <td>
      <%= patient.lastName %> 
    </td>
    <td>
      <%= patient.firstNames %>  
    </td>
    <td>
      <div class="fr-col-2 fr-col-md-1 fr-displayed-xs fr-hidden-lg">
          <% if (!patient.hasFolderCompleted) { %>
            <p class="fr-tag bg-orange-warning  fr-fi-alert-line fr-tag--sm" />
          <% } else { %>
            <p class="fr-tag bg-success fr-fi-check-line fr-tag--sm" />
          <% } %>
      </div>
      <div class="fr-col-4 fr-col-xl-5 fr-hidden-xs fr-displayed-lg">
          <% if (!patient.hasFolderCompleted) { %>
            <p class="fr-tag bg-orange-warning  fr-fi-alert-line fr-tag--icon-left fr-tag--sm">
              Informations manquantes : <%= patient.missingInfo %>
            </p>
          <% } else { %>
            <p class="fr-tag bg-success fr-fi-check-line fr-tag--icon-left fr-tag--sm">
              Dossier complet
            </p>
          <% } %>
      </div> 
    </td>
    <td class="list-actions">
      <form action="/psychologue/api/supprimer-patient" method="POST">
        <input type="hidden" name="_csrf" value="<%= _csrf  %>">
        <input hidden name="patientid" value="<%= patient.id %>" />
        <button type="submit" class="fr-btn fr-btn--secondary fr-btn--sm fr-fi-delete-line fr-displayed-xs fr-hidden-md fr-float-right">
        <button type="submit" class="fr-btn fr-btn--secondary fr-btn--sm fr-fi-delete-line fr-btn--icon-left fr-hidden-xs fr-displayed-md fr-float-right">
          Supprimer
        </button>
      </form>
      <form action="/psychologue/modifier-patient" method="GET">
        <input type="hidden" name="_csrf" value="<%= _csrf  %>">
        <input hidden name="patientid" value="<%= patient.id %>" />
        <button type="submit" class="fr-btn fr-btn--secondary fr-btn--sm fr-fi-edit-line fr-displayed-xs fr-hidden-md fr-float-right">
        <button type="submit" class="fr-btn fr-btn--secondary fr-btn--sm fr-fi-edit-line fr-btn--icon-left fr-hidden-xs fr-displayed-md fr-float-right">
          <% if (!patient.hasFolderCompleted) { %>
            Compl√©ter
          <% } else { %>
            Modifier
          <% } %>
        </button>
      </form>
    </td>
  </tr>
<% }) %>
