<%- include('partials/header') -%>

<div class="rf-container-fluid">
    <div class="rf-mx-12w ">
        <div class="rf-grid-row rf-grid-row--left">
            <div class="rf-col rf-col-xs-10 rf-py-4w">
                <h1>Déclarer mes séances</h1>
                <p>Voici toutes les informations relatives à vos séances et vos patients.</p>
            </div>
        </div>
        <% if (errors.length) { %>
            <% errors.forEach(function(error) { %>
              <%- include('partials/notificationError', {error: error}) -%>
            <% }) %>
          <% } %>
          <% if (infos.length) { %>
            <% infos.forEach(function(info) { %>
              <%- include('partials/notificationInfo', {info: info}) -%>
            <% }) %>
        <% } %>
        <div class="rf-grid-row rf-grid-row--left rf-grid-row--gutter">
            <%- include('myAppointments') -%>
            <%- include('myPatients') -%>
        </div>
        <div class="rf-grid-row rf-grid-row--right rf-my-4w">
            Des questions ? Une difficulté ? Envoyez-nous un email à <b><%= contactEmail %></b>.
        </div>
    </div>
</div>

<%- include('partials/footer') -%>
